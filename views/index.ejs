<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Simple Notes App UI</title>
    <!-- Importing Tailwind CSS via Play CDN -->
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-slate-100 font-sans">

    <!-- Main Container -->
    <div class="container mx-auto p-4 sm:p-6 lg:p-8">

        <!-- Header -->
        <header class="text-center mb-12">
            <h1 class="text-4xl font-extrabold text-gray-800">Simple Notes</h1>
            <p class="text-gray-500 mt-2">Your thoughts, organized.</p>
        </header>

        <!-- Note Creation Form Section -->
        <section id="note-form-section" class="max-w-2xl mx-auto">
            <div class="bg-white p-6 rounded-xl shadow-lg">
                <h2 class="text-2xl font-bold text-gray-700 mb-4">Create a New Note</h2>
                
                <form action="/create" method = "post">
                    <!-- Note Title Input -->
                    <div class="mb-4">
                        <label for="title" class="block text-sm font-medium text-gray-600 mb-1">Note Title</label>
                        <input 
                            type="text" 
                            id="title" 
                            name="title"
                            placeholder="e.g., Meeting Agenda"
                            class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
                            
                        >
                    </div>

                    <!-- Note Content Textarea -->
                    <div class="mb-6">
                        <label for="details" class="block text-sm font-medium text-gray-600 mb-1">Content</label>
                        <textarea 
                            id="details" 
                            name="details" 
                            rows="6"
                            placeholder="Write your note details here..."
                            class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
                        ></textarea>
                    </div>

                    <!-- Submit Button -->
                    <div class="flex justify-end">
                        <button 
                            type="submit" 
                            class="bg-blue-600 text-white font-semibold px-6 py-2 rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors duration-200"
                        >
                            Save Note
                        </button>
                    </div>
                </form>
            </div>
        </section>

        <!-- Divider -->
        <hr class="my-12 border-gray-300">

        <!-- Display Notes Section -->
        <section id="notes-display-section">
            <h2 class="text-3xl font-bold text-gray-700 mb-8 text-center sm:text-left">Your Notes</h2>

            <!-- Grid container for notes -->
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">

                <!-- Sample Note Card 1 -->
                 
                <% if(file && file.length > 0) { %>
                    <% file.forEach((item,ind)=>{ %>
                      <a href="/notes/<%= item %>" class="block">
                            <div class="bg-white p-6 rounded-xl shadow-lg flex flex-col justify-between">
                    <div>
                        <h3 class="text-xl font-bold text-gray-800 mb-2"><%= item %></h3>
                        <p class="text-gray-600 break-words">
                            
                            <%= content[ind]%>
                        </p>
                    </div>
                    <!-- <p class="text-xs text-gray-400 mt-4">Saved: Oct 26, 2023</p> -->
                </div>
                </a>
                    <% }) %>
                  <% } else { %>
                    <h3 class="text-xl font-bold text-gray-800 mb-2">No Notes</h3>
                    <% } %>
                <!-- Placeholder for new notes -->
                <div class="border-2 border-dashed border-gray-300 rounded-xl flex items-center justify-center p-6 min-h-[150px]">
                    <p class="text-gray-400">New notes will appear here</p>
                </div>

            </div>
        </section>

    </div>

</body>
</html>